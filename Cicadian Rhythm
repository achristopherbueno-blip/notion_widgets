<div class="widget-container">
    <!-- Setup View -->
    <div id="setup-view">
        <h2>Circadian Rhythm Tracker</h2>
        <p class="subtitle">Optimize your day based on your natural energy cycles</p>
        <div class="wake-icon">‚òÄÔ∏è</div>
        <button class="start-btn" onclick="startDay()">
            <span>üåÖ I'm Awake</span>
        </button>
    </div>

    <!-- Active View -->
    <div id="active-view">
        <div class="phase-header">
            <div class="phase-icon" id="phase-icon">‚è∞</div>
            <div class="phase-title" id="phase-title">Loading...</div>
            <div class="phase-desc" id="phase-desc"></div>
        </div>

        <div class="progress-container">
            <div class="progress-label">
                <span id="progress-text">Current Phase</span>
                <span id="progress-time">0h 0m remaining</span>
            </div>
            <div class="progress-bar-bg">
                <div class="progress-bar-fill" id="progress-bar" style="width: 0%"></div>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <span class="stat-value" id="hours-awake">0h</span>
                <span class="stat-label">Hours Awake</span>
            </div>
            <div class="stat-card">
                <span class="stat-value" id="phase-number">1/6</span>
                <span class="stat-label">Phase</span>
            </div>
        </div>

        <div class="timeline">
            <div class="timeline-title">Today's Phases</div>
            <div id="timeline-container"></div>
        </div>

        <div class="button-group">
            <button class="btn btn-secondary" onclick="resetDay()">üîÑ Reset</button>
            <button class="btn btn-primary" onclick="showStats()">üìä Stats</button>
        </div>
    </div>
</div>

<script>
    const phases = [
        {
            id: 'rampup',
            icon: '‚òï',
            title: 'Ramp Up',
            desc: 'Light admin, planning & coffee',
            duration: 2,
            startHour: 0
        },
        {
            id: 'deepwork',
            icon: 'üß†',
            title: 'Deep Work',
            desc: 'Peak focus - tackle your hardest tasks',
            duration: 4,
            startHour: 2
        },
        {
            id: 'transition',
            icon: 'ü•™',
            title: 'Lunch Break',
            desc: 'Refuel & recharge with movement',
            duration: 1,
            startHour: 6
        },
        {
            id: 'slump',
            icon: 'üìâ',
            title: 'The Slump',
            desc: 'Shallow work, emails & meetings',
            duration: 2,
            startHour: 7
        },
        {
            id: 'rebound',
            icon: 'üé®',
            title: 'Creative Rebound',
            desc: 'Brainstorming & big-picture thinking',
            duration: 3,
            startHour: 9
        },
        {
            id: 'winddown',
            icon: 'üåô',
            title: 'Wind Down',
            desc: 'Disconnect & prepare for rest',
            duration: 12,
            startHour: 12
        }
    ];

    let wakeTime = localStorage.getItem('circadianWakeTime');

    function startDay() {
        wakeTime = new Date().getTime();
        localStorage.setItem('circadianWakeTime', wakeTime);
        updateUI();
    }

    function resetDay() {
        if(confirm("Reset your wake-up time and start fresh?")) {
            localStorage.removeItem('circadianWakeTime');
            wakeTime = null;
            updateUI();
        }
    }

    function showStats() {
        const hoursSinceWake = getHoursSinceWake();
        const currentPhase = getCurrentPhase();
        alert(`üìä Daily Stats\n\n‚è∞ Hours Awake: ${Math.floor(hoursSinceWake)}h ${Math.floor((hoursSinceWake % 1) * 60)}m\nüéØ Current Phase: ${currentPhase.title}\n‚ú® Keep optimizing your energy!`);
    }

    function updateUI() {
        if (wakeTime) {
            document.getElementById('setup-view').style.display = 'none';
            document.getElementById('active-view').style.display = 'block';
            renderTimeline();
            updatePhase();
        } else {
            document.getElementById('setup-view').style.display = 'block';
            document.getElementById('active-view').style.display = 'none';
        }
    }

    function getHoursSinceWake() {
        if (!wakeTime) return 0;
        const now = new Date().getTime();
        const diffInSeconds = (now - wakeTime) / 1000;
        return diffInSeconds / 3600;
    }

    function getCurrentPhase() {
        const hoursSinceWake = getHoursSinceWake();
        
        for (let i = 0; i < phases.length; i++) {
            const phase = phases[i];
            const nextPhase = phases[i + 1];
            const endHour = nextPhase ? nextPhase.startHour : 24;
            
            if (hoursSinceWake >= phase.startHour && hoursSinceWake < endHour) {
                return {
                    ...phase,
                    endHour,
                    index: i
                };
            }
        }
        
        return phases[phases.length - 1];
    }

    function updatePhase() {
        if (!wakeTime) return;

        const hoursSinceWake = getHoursSinceWake();
        const currentPhase = getCurrentPhase();

        // Update phase info
        document.getElementById('phase-icon').innerText = currentPhase.icon;
        document.getElementById('phase-title').innerText = currentPhase.title;
        document.getElementById('phase-desc').innerText = currentPhase.desc;

        // Update stats
        const hours = Math.floor(hoursSinceWake);
        const minutes = Math.floor((hoursSinceWake % 1) * 60);
        document.getElementById('hours-awake').innerText = `${hours}h ${minutes}m`;
        document.getElementById('phase-number').innerText = `${currentPhase.index + 1}/${phases.length}`;

        // Update progress bar
        const phaseProgress = (hoursSinceWake - currentPhase.startHour) / (currentPhase.endHour - currentPhase.startHour);
        const progressPercent = Math.min(100, Math.max(0, phaseProgress * 100));
        document.getElementById('progress-bar').style.width = progressPercent + '%';

        // Update progress time
        const remainingSeconds = (currentPhase.endHour - hoursSinceWake) * 3600;
        if (remainingSeconds > 0) {
            const h = Math.floor(remainingSeconds / 3600);
            const m = Math.floor((remainingSeconds % 3600) / 60);
            document.getElementById('progress-time').innerText = `${h}h ${m}m remaining`;
        } else {
            document.getElementById('progress-time').innerText = 'Phase complete';
        }

        // Update timeline
        updateTimelineStatus();
    }

    function renderTimeline() {
        const wakeDate = new Date(parseInt(wakeTime));
        const container = document.getElementById('timeline-container');
        container.innerHTML = '';

        phases.forEach((phase, index) => {
            const phaseTime = new Date(wakeDate.getTime() + phase.startHour * 3600000);
            const timeStr = phaseTime.toLocaleTimeString('en-US', { 
                hour: 'numeric', 
                minute: '2-digit',
                hour12: true 
            });

            const item = document.createElement('div');
            item.className = 'timeline-item';
            item.id = `timeline-${phase.id}`;
            item.innerHTML = `
                <div class="timeline-dot"></div>
                <div class="timeline-content">
                    <div class="timeline-phase">${phase.icon} ${phase.title}</div>
                    <div class="timeline-time">${timeStr}</div>
                </div>
            `;
            container.appendChild(item);
        });
    }

    function updateTimelineStatus() {
        const hoursSinceWake = getHoursSinceWake();
        
        phases.forEach((phase, index) => {
            const item = document.getElementById(`timeline-${phase.id}`);
            if (!item) return;

            const nextPhase = phases[index + 1];
            const endHour = nextPhase ? nextPhase.startHour : 24;

            item.classList.remove('active', 'completed');
            
            if (hoursSinceWake >= phase.startHour && hoursSinceWake < endHour) {
                item.classList.add('active');
            } else if (hoursSinceWake >= endHour) {
                item.classList.add('completed');
            }
        });
    }

    // Update every 30 seconds
    setInterval(updatePhase, 30000);
    
    // Initial render
    updateUI();
</script>

</body>
</html>
